<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    android:background="#20304B"
    tools:context=".games.matchingGame.view.MatchingGameActivity">

    <RelativeLayout
        android:layout_weight="0.55"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <fall2018.csc2017.GameCentre.games.GestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/timerFrag"
            android:name="fall2018.csc2017.GameCentre.games.timer.view.TimerView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/sample_timer_activity" />

    </RelativeLayout>


</LinearLayout>